<head>
    <%- include("../shared/head") %>
</head>

<body>
    <div class="container">
        <h1> All Ordres</h1>

        <p><a href="/" class="link-primary"> New Orders</a></p>
        <table class=" table tabel-hover">
            <thead>
                <tr>
                    <th> NAME</th>
                    <th> EMAIL</th>
                    <th> ACTION</th>
                </tr>
            </thead>
            
                <% for( let order of orders ) { %>
                <tr>
                    <td><%= order.fname %></td>
                    <td><%= order.email %></td>
                    <td>
                        <a class="btn btn-primary" role="button" href="/order/<%= order._id %>">View</a>
                        <a class="btn btn-danger" role="button" href="/delete/<%= order._id %>">Delete</a>
                        <a class="btn btn-warning" role="button" href="/update/<%= order._id %>">Update</a>
                    </td>
                </tr>
                <% } %>
                 
            
        </table>

        <%- include("../shared/footer") %>
    </div>
    <%- include("../shared/script") %>
</body>